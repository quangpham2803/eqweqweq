    {
                <div class="movie">
                    <img class="poster" src="@item.FilmPoster"/>
                    <dl>
                       <h2>@item.FilmName</h2>
                     
                        <dt>Lượt xem: @item.FilmViewed</dt>
                        <div class="rating1">
                            <img src="~/images/icons8_star_48px_3.png" />
                            <img src="~/images/icons8_star_48px_3.png" />
