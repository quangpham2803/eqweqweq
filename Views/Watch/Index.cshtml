<!DOCTYPE html>
@{
    ViewData["Title"] = "Detail Film";
}
@model hentaweb_v2.Models.WatchInfo

<head>
    <link rel="stylesheet" href="~/css/watch.css">
    <link rel="stylesheet" href="~/css/button.css">
</head>
